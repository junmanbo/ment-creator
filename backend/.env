# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ment_creator

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# TTS Configuration
TTS_MODEL_CACHE_DIR=/tmp/tts_models
AUDIO_FILES_DIR=./audio_files
VOICE_SAMPLES_DIR=./voice_samples

# TTS Model Settings
DEFAULT_TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
USE_GPU=auto
MAX_CONCURRENT_TTS_JOBS=3

# File Upload Limits
MAX_AUDIO_FILE_SIZE=50MB
ALLOWED_AUDIO_FORMATS=wav,mp3,ogg,flac,m4a

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Development
DEBUG=true
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
